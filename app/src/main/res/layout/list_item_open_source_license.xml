<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:paddingBottom="@dimen/spacing_double">

  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/item_license_library_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    tools:text="All the libraries" />

  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/item_license_library_author"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:text="Â© Blundell" />

  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/item_license_type"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:text="Apache 2.0 all the way, apache till i die, apache till i die." />

  <android.support.v7.widget.AppCompatTextView
    android:id="@+id/item_license_website"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:autoLink="web"
    tools:text="www.github.com/blundell" />

</LinearLayout>
