<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:paddingBottom="@dimen/spacing_single"
  android:paddingLeft="@dimen/spacing_double"
  android:paddingRight="@dimen/spacing_double"
  android:paddingTop="@dimen/spacing_single">

  <TextView
    android:id="@+id/list_item_action_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:text="open" />

  <Space
    android:layout_width="0dip"
    android:layout_height="wrap_content"
    android:layout_weight="100" />

  <android.support.v7.widget.AppCompatButton
    android:id="@+id/list_item_action_toggle"
    style="@android:style/TextAppearance.Small"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:text="open" />

</LinearLayout>
